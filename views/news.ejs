<% layout('layouts/main', {username: username}) -%>

    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <%- include('./partials/nav.ejs') -%>
        </nav>

        <div class="row">
            <div class="col-lg-12">
                <% if (username !=null) { %>
                    <form action="/news/add" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Enter title" />
                            <br />
                            <input type="text" name="text" class="form-control" placeholder="Enter text" />
                            <br/>
                            <input type="file" name="newsImg" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                    <% } %>
            </div>


        </div class="row">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Text</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% news.forEach((item)=> {%>
                                    <tr>
                                        <td>
                                            <%= item.id %>
                                        </td>
                                        <%if(item.img !=null){%>
                                            <td><img src="<%= item.img %>" style="height: 100px; width: 100px;"></td>
                                            <%}else{%>
                                                <td></td>
                                                <%}%>
                                                    <td>
                                                        <%= item.title %>
                                                    </td>
                                                    <td>
                                                        <%= item.text %>
                                                    </td>
                                    </tr>
                                    <% })%>
                            </tbody>
                        </table>
                    </div>
                </div>
            